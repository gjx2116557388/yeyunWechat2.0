.shak_icon{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #DEDFDE;
}

.shak_img{
  height: 200rpx;
  width: 200rpx;
  transform-origin: bottom center;
  animation: rotate 0.1s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(10deg);
  }
  50% {
    transform: rotate(10deg);
  }
  75% {
    transform: rotate(-10deg);
  }
  100% {
    transform: rotate(-10deg);
  }
}
